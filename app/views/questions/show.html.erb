<div class="w-full bg-white p-8 flex flex-col items-center rounded-md">
  <div class="flex flex-col items-center mb-4">
    <p class="text-lg font-semibold text-center"><%= t("earn_coupon_message") %></p>
  </div>
  <%= form_with model: @answer, url: add_answer_question_path(@question, email: @user.email) do |f| %>
    <%= render partial: "shared/form_errors", locals: { object: f.object } %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.hidden_field :question_id, value: @question.id %>
    <%= f.hidden_field :survey_response_id, value: @survey_response.id %>
    <div class="mb-4">
      <p class="mb-2">- <%= @question.name %></p>
      <%= f.text_area :content, required: true, class: "border-2 rounded-md focus:border-primary focus:outline-none py-1 px-2 resize-none" %>
    </div>
    <div class="flex flex-col justify-center">
      <%= f.submit t("add_answer"), class: "bg-primary text-white py-1 px-2 rounded-md cursor-pointer mb-2" %>
      <%= link_to t("cancel"), root_path, class: "bg-red-500 rounded-md text-white text-center py-1" %>
    </div>
  <% end %>
</div>
